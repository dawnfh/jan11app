
<h2>Hi <%= @user.username %></h2>


<h3>>Update Profile </h3>

<p>You're able to change your username and password.</p>

<%= form_for @user do |f|%>
	<%= f.label :username %>
	<%= f.text_field :username, value: @user.username%>
	<%= f.label :password %>
	<%= f.password_field :password, value: @user.password %>
	<%= f.submit %><br>
<% end %>